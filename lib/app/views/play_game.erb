<h3>Play Game</h3>

<% if code_setter == "human" %>
    <p>Type a 4 letter code for the computer to try and guess</p>
    <form action="/set_code" method="POST">
        <input type="text" name="code" placeholder="What's your code?" autofocus>
        <input type="submit" value="Go">
    </form>
<% else %>
    <form action="/guess_code" method="POST">
        <input type="text" name="code" placeholder="What's your guess?" autofocus>
        <input type="submit" value="Go">
    </form>

    <% if feedback %>
        <p>Feedback</p>

        <% feedback[:colors].each_with_index do |color, index| %>
                <font color='<%= color.to_s %>'>
                    <%= feedback[:guess][index].to_s %>
                </font>
        <% end %>

        <% if feedback[:game_over] %>
            <%= erb :play_again %>
        <% end %>

    <% end %>

<% end %>